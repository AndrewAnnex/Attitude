path.trace
  fill: transparent
  stroke-width: 2px

div.attitude-area
  width: 800px

div.row
  flex-grow: 1
  display: flex
  flex-direction: row

*
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

div#data
  flex 1

mono()
  font-family "Consolas", monospace


div.plane-desc
  background-color: #eee
  padding 0.5em
  color #444

  h4
    font-weight 500
    margin-bottom 0
    padding-bottom 0
    font-size 0.9em
  ul
    padding-left 0
    list-style none
    font-size 0.9em
  li
    mono()

h3.data-id
  font-size 0.9em


g.in_group
  path.hyperbola
    stroke-dasharray: 2,2
    fill: none

.collected-ids
  height 1em
  font-size 0.9em
  mono()

.attitude-area
  margin-bottom 1em

.stereonet
  g.plane
    &.in-group
      path.error
        fill none
        stroke-dasharray 2,2
