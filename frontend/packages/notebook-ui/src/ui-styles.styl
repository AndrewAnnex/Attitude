div.attitude-area
  background: white
  margin 1em
  margin-bottom 2em
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

  div.row
    flex-grow: 1
    display: flex
    flex-direction: row
    &>div
      flex 1
    max-height 420px
path.trace
  fill: transparent
  stroke-width: 2px


mono()
  font-family "Consolas", monospace

div.data-panel.pt-tabs
  display: flex
  flex-direction column
  &>.pt-tab-panel[aria-hidden=false]
    width 100%
    heigth 100%
    flex 1
    position relative
    display flex
    flex-direction column
    &>div
      flex 1

div.stereonet-outer
  display flex
  flex-direction column

div.selection-list
  display flex
  button
    margin-bottom 0.4em
  flex-direction column
  position relative
  ul
    display flex
    flex-flow row wrap
    align-content center
    justify-content space-between
    width 100%
    overflow-y scroll
    list-style none
    padding-left 0
    flex 1
    margin -0.2em
    margin-bottom 1em
    mono()
    li
      padding 0.2em 0.5em
      margin 0.2em
      font-size 0.9em
      color #888
      border-radius 0.2em
      background-color #eee
      cursor pointer
      &.selected
        background-color #bbb
        color #666

div.plane-desc
  min-width 15em
  background-color: #eee
  padding 0.5em
  color #444

  h4
    font-weight 500
    margin-bottom 0
    padding-bottom 0
    font-size 0.9em
  ul
    padding-left 0
    list-style none
    font-size 0.9em
  li
    mono()

h3.data-id
  font-size 0.9em


g.in_group
  path.hyperbola
    stroke-dasharray: 2,2
    fill: none

.collected-ids
  height 1em
  margin-bottom 0.5em
  font-size 0.9em
  cursor pointer
  color #444
  mono()


.stereonet
  g.plane, g.normal
    &.in-group
      path.error
        fill none
        stroke-dasharray 2,2

  .neatline path
    fill transparent

  path.graticule
    fill transparent
    stroke #cccccc

  .horizontal path
    fill transparent



.toolbar
  display flex
  flex-direction row
  align-items baseline
  &>*
    margin-right 1em

svg.horizontal-area
  .axis-label
    font-size: 1.2em
