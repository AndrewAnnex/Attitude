.main
  display flex
  flex-direction row
  .data-area, .plot-area
    flex-grow 1

.stereonet
  margin 1em

tr
  height 20px


col
  width: 100px
  &.color
    width 120px
  &.index-column
    width 40px

.data-grid-container .data-grid .cell
  height 20px
  &> input
    margin 0
    padding 0 4px
    outline: none !important
    height: 19px
    width: calc(100% + 2px)
  &>.value-viewer
    padding 0 4px
  &[data-status="invalid"]
    box-shadow: inset 0 0 0 1px salmon;

.neatline
  fill: none
  stroke: black
  stroke-width: 2px

.data-area-main
  display: flex
  flex-direction row
  &>*
    margin-right 4px
    &:last-child
      margin-right 0
