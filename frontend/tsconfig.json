{
  "emitDeclarationOnly": true,
  "allowJS": true,
  "checkJS": true,
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "dist/types",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "plugins", "default-content", "packages"]
}
