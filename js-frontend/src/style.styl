/* Typography */

svg.stereonet {
  path {
    &.sphere {
      fill: none;
      stroke: black;
      stroke-width: 2;
    }
    &.graticule {
      fill: none;
      stroke: #eee;
      stroke-width: 1;
    }
  }
  .dataFrame {
    path {
      &.errors {
        &.main {
          fill: purple;
        }
        fill: #aaa;
      }
      &.nominal {
        &.main {
          stroke: darken(purple,10%);
        }
        fill: none;
        stroke: darken(#ccc,10%);
        stroke-width: 2px;
      }
    }
  }
}
